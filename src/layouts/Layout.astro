---
interface Props {
  title: string;
}

const { title } = Astro.props;
const basePath = import.meta.env.BASE_URL;
const mapHref = basePath;
const configHref = `${basePath}config/`;

const isConfigPage = Astro.url.pathname.startsWith(configHref);
const isMapPage = !isConfigPage;
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link
      rel="stylesheet"
      href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
      integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
      crossorigin=""
    />
  </head>
  <body>
    <header class="topbar">
      <nav class="topnav">
        <a href={mapHref} class:list={{ active: isMapPage }}>Karte</a>
        <a href={configHref} class:list={{ active: isConfigPage }}>Konfiguration</a>
      </nav>
    </header>
    <main class="page-content">
      <slot />
    </main>
  </body>
</html>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  :root {
    --topbar-height: 56px;
  }

  html,
  body {
    height: 100%;
    font-family:
      system-ui,
      -apple-system,
      sans-serif;
  }

  body {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    min-height: 100dvh;
    background: #f5f7fa;
    color: #1f2933;
  }

  .topbar {
    height: var(--topbar-height);
    flex: 0 0 var(--topbar-height);
    position: sticky;
    top: 0;
    z-index: 1200;
    background: #0f172a;
    border-bottom: 1px solid #243246;
  }

  .topnav {
    display: flex;
    gap: 8px;
    align-items: center;
    height: 100%;
    padding: 0 clamp(10px, 2.4vw, 16px);
  }

  .topnav a {
    color: #dce5f2;
    text-decoration: none;
    font-size: 14px;
    padding: 8px 12px;
    border-radius: 6px;
    transition: background-color 120ms ease;
  }

  .topnav a:hover {
    background: #1e2d45;
  }

  .topnav a.active {
    background: #2a9d8f;
    color: white;
  }

  .page-content {
    flex: 1;
    min-height: 0;
    height: calc(100vh - var(--topbar-height));
    height: calc(100dvh - var(--topbar-height));
    overflow: auto;
  }

  @media (max-width: 640px) {
    :root {
      --topbar-height: 52px;
    }

    .topnav {
      gap: 6px;
      padding: 0 8px;
    }

    .topnav a {
      flex: 1;
      text-align: center;
      font-size: 13px;
      padding: 8px 10px;
    }
  }
</style>
